<div class="container">

<h4 class="list-group-item active text-center"> Restaurants </h4>
<h5 class="text-center"><%= link_to 'Create new Restaurant', new_restaurant_path(@restaurant) %></h5>
<% @restaurants.each do |restaurant| %>
  <div class="list-group col-xs-12 col-sm-6 col-md-6 text-center">
    <%= link_to restaurant, class: "list-group-item active" do %>
      <h4 class="list-group-item-text"><%= restaurant.name %></h4>
      <br>
      <p class="list-group-item-text">Adress: <%= restaurant.address %></p>
      <p class="list-group-item-text">Phone Number: <%= restaurant.phone_number %></p>
      <p class="list-group-item-text">Category: <%= restaurant.category.capitalize %></p>
    <% end %>
  </div>
<% end %>
</div>
