<div class="container text-center">

    <h4 class="list-group-item active text-center"> Restaurant </h4>
    <br>
      <div class=text-center>
    <p><%= link_to "Create a review", new_restaurant_review_path(@restaurant) %><p>

  </div>
    <div class="list-group text-center">
      <a class="list-group-item active">
        <h4 class="list-group-item-heading"><%= @restaurant.name %></h4>
        <br>
        <p class="list-group-item-text">Adress: <%= @restaurant.address %></p>
        <br>
        <p class="list-group-item-text">Phone Number: <%= @restaurant.phone_number %></p>
        <br>
        <p class="list-group-item-text">Category: <%= @restaurant.category %></p>
      </a>
    </div>
  </div>
</div>
<div class="container">
    <h4 class="list-group-item active text-center"> Reviews: </h4>
    <br>
    <% @restaurant.reviews.each do |review|  %>

    <div class="list-group text-center">
      <a class="list-group-item active">
      <% review.rating.times do %>
      <i class="fa fa-heart-o" aria-hidden="true"></i>
      <% end %>
        <p class="list-group-item-text"><%= review.content %></p>

      </a>
      <br>
      <% end %>
    </div>
  </div>
      <p class="list-group-item active"><%= link_to "Back to restaurants", restaurants_path %></p>

</div>


